@model IEnumerable<TheWorldVS.Models.Trip>
@{
    ViewBag.Title = "Home Page";
}
@section Scripts {
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/lib/angular-route/angular-route.min.js"></script>
    <script src="~/js/simplecontrols.js"></script>
    <script src="~/js/app-trips.js"></script>
    <script src="~/js/tripsController.js"></script>
}
<div class="row" data-ng-app="app-trips">
    <div data-ng-controller="tripsController as vm" class="col-md-6 col-md-offset-3">
        <div class="text-danger" ng-show="true">{{vm.errorMessage}}</div>
        <wait-cursor display-when="vm.isBusy"></wait-cursor>
        <table class="table table-responsive table-striped">
            <tr ng-repeat="trip in vm.trips">
                <td>{{trip.name}}</td>
                <td>{{trip.created | date:'MM-dd-yyyy'}}</td>
                <td><a href="#" class="btn btn-sm btn-primary">Manage</a></td>
            </tr>
        </table>

        <form novalidate name="newTripForm" ng-submit="vm.addTrip()">
            <div class="form-group">
                <div>
                    <label for="name">Trip Name</label>
                    <input id="name" name="name" class="form-control" type="text" data-ng-model="vm.newTrip.name" required ng-minlength="5" />
                    <span ng-show="newTripForm.name.$error.required" class="text-warning">Trip name is required.</span>
                    <span ng-show="newTripForm.name.$error.minlength" class="text-warning">Trip name must be at least 5 characters.</span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" 
                       value="Add" 
                       class="btn btn-success"
                       ng-disabled="newTripForm.$invalid" />
            </div>
        </form>
    </div>
    <div class="col-md-6 col-xs-8">
        <h1>The World</h1>

        <form class="form-group">
            <div>
                <label>Date</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label>Location</label>
                <input class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-success" />
            </div>
        </form>
    </div>

    <div class="col-md-6 col-xs-4">
        <h2>The Map</h2>
        <ul>
            @foreach (var trip in Model)
            {
                <li>@trip.Name (@trip.Created.ToShortDateString())</li>
            }
        </ul>
    </div>
</div>