@{
    ViewBag.Title = "Home Page";
}

<!doctype html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />

    <title>The World - @ViewBag.Title</title>
    <meta name="description" content="The HTML5 Herald">
    <meta name="author" content="Robert Mundy">
    <link href="~/css/site.css" rel="stylesheet" />

    <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>

<body>
    <div id="sidebar">
        <img src="~/img/user1.jpg" alt="Sam Hastings image" class="headshot" />
        <span>Sam Hastings</span>
        <ul class="menu">
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
        </ul>
    </div>
    <div id="wrapper">
        <div id="main">
            <div>
                <button id="sidebarToggle">Toggle Menu</button>
            </div>

            <div>
                @RenderBody()
            </div>
        </div>
        <div id="footer">
            &copy; 2016 Cylex Inc.
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>

    @RenderSection("Scripts", false)
</body>
</html>